<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LaundryTrackerApp" parent="android:Theme.Material.Light.NoActionBar" >
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/light</item>

        <!-- Background and text colors -->
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.LaundryTrackerApp." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>